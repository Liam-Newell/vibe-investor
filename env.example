# Vibe Investor Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# CRITICAL: ALWAYS START WITH PAPER TRADING
# =============================================================================
PAPER_TRADING_ONLY=true
# Set to false ONLY after 60+ days of successful paper trading

# =============================================================================
# API CREDENTIALS
# =============================================================================

# Claude API (Required for AI strategy)
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Broker API (Choose one)
BROKER_TYPE=ibkr
# For Interactive Brokers
IBKR_TWS_HOST=127.0.0.1
IBKR_TWS_PORT=7497
IBKR_CLIENT_ID=1
# For Questtrade
QUESTRADE_REFRESH_TOKEN=your_questrade_refresh_token
QUESTRADE_API_SERVER=https://api01.iq.questrade.com/

# Market Data (Optional - for enhanced analysis)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
POLYGON_API_KEY=your_polygon_api_key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PASSWORD=secure_database_password_change_this
REDIS_PASSWORD=secure_redis_password_change_this

# =============================================================================
# TRADING STRATEGY CONFIGURATION
# =============================================================================

# Claude Configuration
CLAUDE_MORNING_ENABLED=true
CLAUDE_EVENING_ENABLED=true
CLAUDE_MAX_DAILY_QUERIES=3
CLAUDE_MORNING_TIME=09:45
CLAUDE_EVENING_TIME=17:00

# Trading Parameters
MAX_SWING_POSITIONS=6
TARGET_DAILY_RETURN=0.01
DEFAULT_POSITION_SIZE_PCT=15
MAX_POSITION_SIZE_PCT=25
DEFAULT_STOP_LOSS_PCT=5
MAX_HOLDING_PERIOD_DAYS=5

# System Features
ENABLE_TRADITIONAL_BENCHMARK=true
ENABLE_OPTIONS_INCOME=true
ENABLE_NEWS_SENTIMENT=false

# Technical Indicators
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
SMA_SHORT=20
SMA_LONG=50

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
# IMPORTANT: Set to true to receive beautiful morning and evening reports
EMAIL_ENABLED=true

# =============================================================================
# OPTION 1: USE EXISTING EMAIL (NO REGISTRATION NEEDED)
# =============================================================================

# Gmail (easiest - just need app password)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password  # Generate at myaccount.google.com/apppasswords

# Outlook/Hotmail
# SMTP_SERVER=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USER=your-email@outlook.com
# SMTP_PASSWORD=your-password

# Yahoo Mail  
# SMTP_SERVER=smtp.mail.yahoo.com
# SMTP_PORT=587
# SMTP_USER=your-email@yahoo.com
# SMTP_PASSWORD=your-app-password

# =============================================================================
# OPTION 2: CUSTOM DOMAIN (PROFESSIONAL - REQUIRES DOMAIN)
# =============================================================================

# Zoho Mail (FREE with custom domain)
# SMTP_SERVER=smtp.zoho.com
# SMTP_PORT=587
# SMTP_USER=vibe@vibeinvestor.ca
# SMTP_PASSWORD=your-zoho-password

# Self-hosted
# SMTP_SERVER=mail.vibeinvestor.ca
# SMTP_PORT=587
# SMTP_USER=vibe@vibeinvestor.ca
# SMTP_PASSWORD=your-smtp-password

# Reports will be sent to this email address:
ALERT_EMAIL=liam-newell@hotmail.com

# NOTE: Emails will come from whatever SMTP_USER you configure above
# - With existing email: Reports from your-email@gmail.com 
# - With custom domain: Reports from vibe@vibeinvestor.ca

# Email Frequency
DAILY_SUMMARY_ENABLED=true
TRADE_CONFIRMATION_ENABLED=true
ERROR_ALERT_ENABLED=true
WEEKLY_REPORT_ENABLED=true

# =============================================================================
# WEB DASHBOARD CONFIGURATION
# =============================================================================
DASHBOARD_PORT=8080
DASHBOARD_HOST=0.0.0.0

# Security (Optional - for external access)
DASHBOARD_AUTH_ENABLED=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=secure_dashboard_password

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
MAX_DAILY_LOSS_PCT=5
MAX_DRAWDOWN_PCT=10
CIRCUIT_BREAKER_ENABLED=true
EMERGENCY_STOP_LOSS_PCT=15

# Portfolio Limits
MAX_SECTOR_CONCENTRATION_PCT=40
MAX_SINGLE_POSITION_PCT=25
MIN_CASH_RESERVE_PCT=10

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=90
ENABLE_PERFORMANCE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=false
BACKUP_GPG_KEY_ID=your_gpg_key_id

# =============================================================================
# OPTIONAL: DISCORD/TELEGRAM WEBHOOKS
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_API_DOCS=true

# =============================================================================
# TIMEZONE & MARKET SETTINGS
# =============================================================================
TIMEZONE=America/New_York
MARKET_TIMEZONE=America/New_York
TRADING_DAYS=Monday,Tuesday,Wednesday,Thursday,Friday
MARKET_OPEN_TIME=09:30
MARKET_CLOSE_TIME=16:00

# =============================================================================
# ADVANCED SETTINGS (Usually don't need to change)
# =============================================================================
DATABASE_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=20
API_TIMEOUT_SECONDS=30
MAX_RETRY_ATTEMPTS=3
RATE_LIMIT_REQUESTS_PER_MINUTE=60 